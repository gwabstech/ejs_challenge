<%- include('partials/header'); -%>

    <main class="container my-5">
        <header class="jumbotron">
            <h2 class="display-4 text-center mb-4">
                <%= homeStartingContent %>
            </h2>
        </header>

        <section class="row">
            <div class="col-12">
                <h2 class="text-center mb-4">Articles</h2>
            </div>
            <% articlesList.forEach(function(article) { %>
                <div class="col-12 mb-5">
                    <div class="card" style="height: 100%;">
                        <div class="row no-gutters" style="height: 100%;">
                            <div class="col-md-4">
                                <img src="<%= article.image %>" class="card-img" alt="Article Image">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body" style="height: 100%; overflow: hidden;">
                                    <h2 class="card-title">
                                        <%= article.title %>
                                    </h2>
                                    <p class="card-text">
                                        <%= article.content.substring(0, article.content.length/2) %>...
                                    </p>
                                    <a href="/article/<%= article.id %>" class="btn btn-primary">Read More</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% }); %>
        </section>

    </main>


    <%- include('partials/footer'); -%>

        <style>
            body {
                background-color: #f8f9fa;
                color: #333;
                font-family: Arial, sans-serif;
                font-size: 16px;
                line-height: 1.5;
            }

            h1,
            h2,
            h3 {
                margin-bottom: 1rem;
                font-weight: 700;
                line-height: 1.2;
            }

            h1 {
                font-size: 2.5rem;
            }

            h2 {
                font-size: 2rem;
            }

            h3 {
                font-size: 1.5rem;
            }

            .jumbotron {
                background-color: #fff;
                padding: 2rem;
                margin-bottom: 2rem;
                border-radius: 0.3rem;
                box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            }

            .card {
                border: none;
                border-radius: 0.3rem;
                box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            }

            .card-img {
                object-fit: cover;
                height: 100%;
            }

            .card-body {
                height: 100%;
                overflow: hidden;
            }

            .btn-primary {
                background-color: #007bff;
                border-color: #007bff;
                color: #fff;
            }

            .btn-primary:hover {
                background-color: #0069d9;
                border-color: #0062cc;
                color: #fff;
            }
        </style>